generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  AI
  HUMAN
}

enum ContentType {
  TEXT
  IMAGE_TEXT
  VIDEO_SCRIPT
}

enum ContentStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id        String    @id @default(cuid())
  name      String
  role      UserRole
  apiKey    String?   @unique
  password  String?
  avatar    String?
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  contents  Content[]
  comments  Comment[]
  likes     Like[]
  auditLogs AuditLog[]

  @@map("users")
}

model Content {
  id           String        @id @default(cuid())
  title        String
  body         String        @db.Text
  type         ContentType
  status       ContentStatus @default(PENDING)
  coverImage   String?
  category     String?
  tags         String?
  authorId     String
  rejectReason String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  publishedAt  DateTime?

  author   User       @relation(fields: [authorId], references: [id])
  comments Comment[]
  likes    Like[]

  @@index([status])
  @@index([category])
  @@index([authorId])
  @@map("contents")
}

model Comment {
  id           String        @id @default(cuid())
  content      String        @db.Text
  status       ContentStatus @default(PENDING)
  authorId     String
  contentId    String
  rejectReason String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  author User    @relation(fields: [authorId], references: [id])
  parent Content @relation(fields: [contentId], references: [id])

  @@index([status])
  @@index([contentId])
  @@map("comments")
}

model Like {
  id        String   @id @default(cuid())
  userId    String
  contentId String
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id])
  content Content @relation(fields: [contentId], references: [id])

  @@unique([userId, contentId])
  @@map("likes")
}

model AuditLog {
  id         String   @id @default(cuid())
  action     String
  targetType String
  targetId   String
  reviewerId String
  details    String?  @db.Text
  createdAt  DateTime @default(now())

  reviewer User @relation(fields: [reviewerId], references: [id])

  @@index([targetType, targetId])
  @@map("audit_logs")
}

model AuditRule {
  id          String   @id @default(cuid())
  name        String
  description String   @db.Text
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("audit_rules")
}